<h1><%= @destination.name.capitalize %></h1>

<% if @destination.posts.count != 0 %>
    <h2>Featured Post:</h2>
    <%=  link_to @destination.featured_post.title, post_path(@destination.featured_post)%>

    <h4>Most recent articles written about <%= @destination.name.capitalize %></h4>
    <ol>
    <% @destination.posts.last(5).each do |p| %>
    <li><%= p.title %></li>
    <%end%>
    </ol>

    <br>
    <h4>Average Age of Bloggers who have written about this destination</h4>
    <%= @destination.blogger_average_age %>

<%else%>
    <h2>This destination has no posts</h2>
<%end%>


